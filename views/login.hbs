<div class='container'>
    <div class='row' style='margin-top: 50px'>
        <h2 class='input-field offset-s5 col s6'>Log In</h2>
        <form action='/auth/login' method='POST' id='log'>

            <div class='input-field offset-s3 col s6'>
                <input
                    name="email"
                    id='email_inline'
                    type='email'
                    class='validate'
                />
                <label class='active' for='email'>Email</label>
            </div>

            <div class='row'>
                <div class='input-field offset-s3 col s6'>
                    <input id='password' name="password" type='password' class='validate' />
                    <label class='active' for='password'>Password</label>
                </div>
            </div>
            <button
                class='btn waves-effect waves-light offset-s3'
                type='submit'
                name='action'
                style='display: block; margin: 0 auto'
            >Log In
            </button>
        </form>
    </div>
</div>
